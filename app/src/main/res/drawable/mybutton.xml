<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff0d0a" />
            <gradient android:angle="-90" android:endColor="#bb0d0a" android:startColor="#cc0d0a" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff0d0a" />
            <solid android:color="#ff0d0a" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff0d0a" />
            <gradient android:angle="-90" android:endColor="#ff0d0a" android:startColor="#ff0d0a" />
        </shape>
    </item>
</selector>